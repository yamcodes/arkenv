{
	"name": "arkenv-monorepo",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=./packages/*",
		"dev": "turbo run dev --filter=arkenv",
		"typecheck": "turbo run typecheck",
		"docs": "turbo run dev --filter=www",
		"www": "turbo run dev --filter=www",
		"e2e": "turbo run e2e --filter=www",
		"release": "pnpm run build:packages && changeset publish",
		"fix": "biome check --write .",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"clean": "rimraf dist node_modules",
		"test": "vitest",
		"changeset": "changeset"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@changesets/cli": "^2.29.7",
		"brace-expansion": "4.0.1",
		"changesets-changelog-clean": "^1.3.0",
		"jsdom": "^27.0.0",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.8",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"packageManager": "pnpm@10.15.1",
	"pnpm": {
		"ignoredBuiltDependencies": [
			"esbuild",
			"sharp"
		],
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@sentry/cli"
		]
	},
	"version": "0.0.1"
}
