{
	"name": "arkenv-monorepo",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=./packages/*",
		"dev": "turbo run dev --filter=arkenv",
		"typecheck": "turbo run typecheck",
		"docs": "turbo run dev --filter=www",
		"www": "turbo run dev --filter=www",
		"release": "pnpm run build:packages && changeset publish",
		"fix": "biome check --write .",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"clean": "rimraf dist node_modules",
		"test": "turbo run test",
		"test:ci": "turbo run test:ci",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"changeset": "changeset"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@changesets/cli": "^2.29.7",
		"brace-expansion": "4.0.1",
		"changesets-changelog-clean": "^1.3.0",
		"jsdom": "^27.0.0",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@10.18.2",
	"pnpm": {
		"ignoredBuiltDependencies": [
			"esbuild",
			"sharp"
		],
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@sentry/cli",
			"@swc/core",
			"@tailwindcss/oxide",
			"@vercel/speed-insights"
		]
	},
	"version": "0.0.1"
}
