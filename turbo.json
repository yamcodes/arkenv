{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"env": ["SENTRY_*"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"//#fix": {
			"cache": false
		},
		"typecheck": {
			"inputs": ["*.ts", "*.tsx"]
		},
		"e2e": {
			"dependsOn": ["^build"],
			"cache": false,
			"inputs": ["e2e/**/*.ts", "playwright.config.ts"]
		}
	}
}
