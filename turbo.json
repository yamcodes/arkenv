{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"!src/**/*.test.ts",
				"!src/**/*.test.tsx"
			],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"env": ["SENTRY_*"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"//#fix": {
			"cache": false
		},
		"typecheck": {
			"inputs": ["*.ts", "*.tsx"]
		}
	}
}
