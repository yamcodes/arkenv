{
	"name": "@repo/playwright-www",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"test:e2e": "playwright test tests --grep-invert /a11y/i",
		"test:a11y": "playwright test tests/a11y.test.ts",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:report": "playwright show-report",
		"test:e2e:update": "bin/update-playwright.sh",
		"clean": "rimraf dist node_modules test-results playwright-report"
	},
	"dependencies": {
		"www": "workspace:*"
	},
	"devDependencies": {
		"@axe-core/playwright": "4.11.0",
		"@playwright/test": "",
		"@types/node": "24.10.1",
		"typescript": "5.9.3"
	}
}
