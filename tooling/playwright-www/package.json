		"test:e2e:update": "bin/update-playwright.sh"
	},
	"dependencies": {
		"www": "workspace:*"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.0",
		"@playwright/test": "^1.56.1",
		"@types/node": "24.9.1",
		"typescript": "^5.9.3"
	}
}
