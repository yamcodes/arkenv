{
	"compilerOptions": {
		"target": "es2020",
		"module": "preserve",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
