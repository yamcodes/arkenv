{
	"compilerOptions": {
		"target": "es2020",
		"module": "preserve",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitAny": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"]
}
