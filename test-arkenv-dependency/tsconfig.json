{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"composite": true,
		"declaration": true,
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"preserveConstEnums": true,
		"noEmit": true,
		"sourceMap": false,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"references": []
}
